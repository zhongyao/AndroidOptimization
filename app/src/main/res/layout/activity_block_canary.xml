<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".blockcanary.BlockCanaryActivity">

    <Button
        android:id="@+id/testBlockBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="测试卡顿(系统消息机制)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/blockCanaryBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="主线程卡顿(BlockCanary)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testBlockBtn" />

</android.support.constraint.ConstraintLayout>